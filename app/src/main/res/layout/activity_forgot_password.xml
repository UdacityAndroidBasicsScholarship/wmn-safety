<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".accounts.ForgotPasswordActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263238">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
    android:id="@+id/Image_View_logo"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="20dp"
    android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/forgot_header_text"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:text="Forgot Password"
        android:layout_below="@id/Image_View_logo"
        android:textSize="34sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/reset_pass_text"
        android:layout_below="@id/forgot_header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:padding="16dp"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:textSize="17sp"
        android:text="Enter your email to reset Password"/>

    <EditText
        android:id="@+id/email_text"
        android:layout_below="@id/reset_pass_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:textColorHint="@android:color/white"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="64dp"
        android:inputType="textAutoComplete"
        android:textSize="16dp"
        android:textColor="@android:color/white" />
    <Button
        android:layout_below="@id/email_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@android:color/white"
        android:backgroundTint="#37474F"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"/>


</RelativeLayout>
</ScrollView>
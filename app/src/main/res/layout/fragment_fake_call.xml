<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FakeCallFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fragmentsBackgroudColor"
        >

        <TextView
            android:id="@+id/fakeCallTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fake_call_label"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="50dp"
            />

        <ImageView
            android:id="@+id/fakeCallImageButton"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/onboarding_image_2"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/fakeCallTextView"
            android:layout_marginTop="40dp"
            />
    </RelativeLayout>

</FrameLayout>